@model DogGo2.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>Walker Profile</h1>

  <section class="container">
        <img class="bg-info" src="@Model.walker.ImageUrl" alt="avatar" width="100" />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.walker.neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">

    <section class="col-8 container mt-5">
    <table class="table">
      <thead>
        <tr>
            
            <th>
                Date
            </th>
            <th>
                Dog Client
            </th>
            <th>
               Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Walk walk in Model.walks) {
        <tr>
            <td>
                @walk.formatedDate
            </td>
            <td>
                @walk.dog.Name
            </td>
            <td>
                @walk.formatedDuration min
            </td>
          
        </tr>
}
    </tbody>
    </table>
    </section>

    <section class="col-lg-4 col-md-8 container mt-5">
            <div>
                <label class="font-weight-bold" >Total Walk Time: </label>
                <span>@Model.walker.TotalWalkTime</span>
            </div>

     
    </section>
  </div>
</div>
